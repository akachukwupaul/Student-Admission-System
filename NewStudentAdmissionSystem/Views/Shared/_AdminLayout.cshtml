﻿@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Admin Panel</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.13.1/font/bootstrap-icons.min.css">

    <style>
        body {
            display: flex;
            min-height: 100vh;
            overflow: hidden;
        }

        /* Sidebar styling */
        .sidebar {
            width: 250px;
            background-color: #28a745;
            color: white;
            padding-top: 25px;
        }

            .sidebar a {
                display: block;
                padding: 12px 20px;
                text-decoration: none;
                color: #ddd;
                font-size: 17px;
                font-weight: bold;
                border-left: 4px solid transparent;
            }

                .sidebar a:hover {
                    background-color: #165b26;
                    color: #fff;
                    border-left: 4px solid #165b26;
                }

            .sidebar .active {
                background-color: #165b26;
                color: white;
                border-left: 4px solid #fff;
            }

        /* Main content area */
        .content {
            flex-grow: 1;
            padding: 25px;
            overflow-y: auto;
        }

        /* Top bar */
        .topbar {
            background: #f8f9fa;
            padding: 12px 20px;
            border-bottom: 1px solid #ddd;
        }

        .sub-menu-item {
            display: block;
            padding: 10px 20px 10px 40px !important;
            color: white;
            font-size: 0.9rem;
            background-color: #0dbd33;
        }

            .sub-menu-item:hover {
                background-color: #165b26 !important;
                color: white !important;
            }

    </style>
</head>

<body>

    <!-- SIDEBAR -->
    <div class="sidebar">
        <h2 class="text-center mb-4">Admin Panel</h2>

        <a asp-action="Dashboard">
            Dashboard
        </a>

        <div class="dropdown-menu-item">
            <a class="dropdown-toggle" data-bs-toggle="collapse" href="#studentMenu" role="button" aria-expanded="false">
                <i class="bi bi-people"></i> Student Records
            </a>
            <div class="collapse" id="studentMenu">
                <a asp-controller="Admin" asp-action="StudentRecords" class="sub-menu-item">
                    <i class="bi bi-list-ul"></i> Student Management
                </a>
                <a asp-controller="Admin" asp-action="AddStudent" class="sub-menu-item">
                    <i class="bi bi-person-plus"></i> Add New Student
                </a>
            </div>
        </div>

        <a class="nav-link" asp-controller="Admin" asp-action="CheckStudentStatus">
            Check Admission Status
        </a>

        <a href="@Url.Action("Index", "Home")">
            <i class="bi bi-box-arrow-right"></i> Logout
        </a>
    </div>

    <!-- MAIN CONTENT AREA -->
    <div class="content">
        <div class="topbar">
            <h5 class="m-0">Welcome, Admin</h5>
        </div>

        <!-- Alert Messages -->
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible fade show" role="alert">
                <strong>Success!</strong> @TempData["SuccessMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                <strong>Error!</strong> @TempData["ErrorMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }

        @if (TempData["InfoMessage"] != null)
        {
            <div class="alert alert-info alert-dismissible fade show" role="alert">
                @TempData["InfoMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
            </div>
        }


        <div class="mt-3">
            @RenderBody()
        </div>
    </div>

    <script>
        function toggleDropdown() {
            var menu = document.getElementById('studentMenu');
            if (menu.classList.contains('show')) {
                menu.classList.remove('show');
            } else {
                menu.classList.add('show');
            }
        }

        setTimeout(function () {
            var alerts = document.querySelectorAll('.alert');
            alerts.forEach(function (alert) {
                var bsAlert = new bootstrap.Alert(alert);
                bsAlert.close();
            });
        }, 3000);

    </script>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>

</body>
</html>