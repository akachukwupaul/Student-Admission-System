@{
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>Admin Panel</title>

    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet" />

    <style>
        body {
            display: flex;
            min-height: 100vh;
            overflow: hidden;
        }

        /* Sidebar styling */
        .sidebar {
            width: 250px;
            background-color: #28a745;
            color: white;
            padding-top: 25px;
        }

            .sidebar a {
                display: block;
                padding: 12px 20px;
                text-decoration: none;
                color: #ddd;
                font-size: 16px;
                border-left: 4px solid transparent;
            }

                .sidebar a:hover {
                    background-color: #343a40;
                    color: #fff;
                    border-left: 4px solid #0d6efd;
                }

            .sidebar .active {
                background-color: #0d6efd;
                color: white;
                border-left: 4px solid #fff;
            }

        /* Main content area */
        .content {
            flex-grow: 1;
            padding: 25px;
            overflow-y: auto;
        }

        /* Top bar */
        .topbar {
            background: #f8f9fa;
            padding: 12px 20px;
            border-bottom: 1px solid #ddd;
        }
    </style>
</head>

<body>

    <!-- SIDEBAR -->
    <div class="sidebar">
        <h4 class="text-center mb-4">Admin Panel</h4>

        <a asp-action="Dashboard">
            Dashboard
        </a>

        <div class="dropdown-menu-item">
            <a href="#" class="dropdown-toggle" data-bs-toggle="collapse" data-bs-target="#studentMenu" aria-expanded="false">
                <i class="bi bi-people"></i> Student Records
            </a>
            <div class="collapse" id="studentMenu">
                <a href="#" class="sub-menu-item">
                    Student Management
                </a>
                <a href="#" class="sub-menu-item">
                    Add New Student
                </a>
            </div>
        </div>

        <a class="nav-link" asp-controller="Student" asp-action="CheckStatus">
            Check Admission Status
            </a>

        <a href="@Url.Action("Index", "Home")">
            <i class="bi bi-box-arrow-right"></i> Logout
        </a>
    </div>

    <!-- MAIN CONTENT AREA -->
    <div class="content">
        <div class="topbar">
            <h5 class="m-0">Welcome, Admin</h5>
        </div>

        <div class="mt-3">
            @RenderBody()
        </div>
    </div>

</body>
</html>
