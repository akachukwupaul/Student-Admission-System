@model NewStudentAdmissionSystem.Models.StudentApplication

@{
    ViewData["Title"] = "Edit Student";
    Layout = "_AdminLayout";
}
<h3>Edit Student Record</h3>
@if (!ViewData.ModelState.IsValid)
{
    <div class="alert alert-danger">
        <ul>
            @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
            {
                <li>@error.ErrorMessage</li>
            }
        </ul>
    </div>
}
<form asp-action="EditStudent" asp-route-id="@Model.Id" method="post">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label for="Name">First Name</label>
        <input type="text" class="form-control" asp-for="FirstName"/>
        <span asp-validation-for="FirstName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Name">Last Name</label>
        <input type="text" class="form-control" asp-for="LastName" />
        <span asp-validation-for="LastName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Name">Email Address</label>
        <input type="text" class="form-control" asp-for="EmailAddress" />
        <span asp-validation-for="EmailAddress" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Academic information">Academic Information</label>
        <input type="text" class="form-control" asp-for="AcademicInfo" />
        <span asp-validation-for="AcademicInfo" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Application Number">Application Number</label>
        <input type="text" class="form-control" asp-for="ApplicationNumber" />
        <span asp-validation-for="ApplicationNumber" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="CourseId">Course</label>
        <select asp-for="CourseId" asp-items="ViewBag.Courses" class="form-control"></select>
        <span asp-validation-for="CourseId" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Status">Status</label>
        <input type="text" class="form-control" asp-for="Status" />
        <span asp-validation-for="Status" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Name">Date of Birth</label>
        <input type="date" class="form-control" asp-for="DateOfBirth" />
        <span asp-validation-for="DateOfBirth" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Name">Date of Registeration</label>
        <input type="date" class="form-control" asp-for="DateOfApplication" />
        <span asp-validation-for="DateOfApplication" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="Name">Phone Number</label>
        <input type="text" class="form-control" asp-for="PhoneNumber" />
        <span asp-validation-for="PhoneNumber" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Save Changes</button>
</form>