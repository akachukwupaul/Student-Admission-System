 @model X.PagedList.IPagedList<NewStudentAdmissionSystem.Models.StudentApplication> 
@using X.PagedList.Mvc.Core;
@using X.PagedList.Web.Common
@{
    ViewData["Title"] = "Admin Dashboard";
}
<h2>Admin Dashboard</h2>
<form asp-action="Dashboard" method="get" class="mb-3">
    <div class="input-group">

    <input type="text" name="searchString" placeholder="Search by name, course or application number" value="@ViewBag.SearchString" class="form-control" />
    <button type="submit" class="btn btn-primary">Search</button>
        </div>
</form>


<table class="table table-striped">
    <thead>
        <tr>
        <th>Name</th>
        <th>Application Number</th>
        <th>Status</th>
        <th>Registration Date</th>
        <th>Course</th>
        </tr>
    </thead>
    <tbody>
        @foreach(var student in Model)
        {
            <tr>
                <td>@student.FirstName @student.LastName</td>
                <td>@student.ApplicationNumber</td>
                <td>@student.Status</td>
                <td>@student.DateOfApplication.ToShortDateString()</td>
                <td>@student.Course?.Name</td>
                <td>
                    <a asp-action="Details" asp-route-Id ="@student.Id" class="btn btn-info">View</a>

                    <form asp-action="UpdateStatus" method="post" style="display:inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@student.Id" />
                        <input type="hidden" name="status" value="ACCEPTED"/>
                        <button type="submit" class="btn btn-success" onclick="return confirm('Are you sure you want to accept @student.ApplicationNumber?')">Accept</button>                     
                    </form>

                    <form asp-action="UpdateStatus" method="post" style="display:inline">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="id" value="@student.Id" />
                        <input type="hidden" name="status" value="REJECTED" />
                        <button type="submit" class="btn btn-danger" onclick="return confirm('Are you sure you want to reject @student.ApplicationNumber?')">Reject</button>
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>

<div class="d-flex justify-content-center mt-4">
    @Html.PagedListPager(
            Model,
            page => Url.Action("Dashboard",
            new { page }),
            new PagedListRenderOptions
    {
        // Display = PagedListDisplayMode.IfNeeded: Only displays the pager if there is more than one page of results.
        Display = PagedListDisplayMode.IfNeeded,
        // to the unordered list (<ul>) tag that holds the page links.
        UlElementClasses = new[] { "pagination" },
        // to each list item (<li>) tag, which contains an individual page link.
        LiElementClasses = new[] { "page-item" },
        PageClasses = new[] { "page-link" }
    }
            )
</div>