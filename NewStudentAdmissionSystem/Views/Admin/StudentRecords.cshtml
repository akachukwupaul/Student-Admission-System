@model X.PagedList.IPagedList<NewStudentAdmissionSystem.Models.StudentApplication>
@using X.PagedList.Mvc.Core
@using X.PagedList.Web.Common

@{
    ViewData["Title"] = "Student Records";
    Layout = "_AdminLayout";
}
<h2>Student Records</h2>
<form asp-action="StudentRecords" method="get" class="mb-3">
    <div class="input-group">

        <input type="text" name="searchString" placeholder="Search by name, course or application number" value="@ViewBag.SearchString" class="form-control" />
        <button type="submit" class="btn btn-primary">Search</button>
    </div>
</form>

<table class="table table-striped">
    <thead>
        <tr>
            <th>Name</th>
            <th>Application Number</th>
            <th>Status</th>
            <th>Registration Date</th>
            <th>Course</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var student in Model)
        {
            <tr>
                <td>@student.FirstName @student.LastName</td>
                <td>@student.ApplicationNumber</td>
                <td>@student.Status</td>
                <td>@student.DateOfApplication.ToShortDateString()</td>
                <td>@student.Course?.Name</td>
                <td>
                    <a asp-action="Details" asp-route-Id="@student.Id"class="btn btn-info">Details</a>

                    <a asp-action="EditStudent" asp-controller="Admin" asp-route-id="@student.Id" class="btn btn-dark" onclick="return confirm('are you want to edit?')">
                        Edit
                    </a>

                    <a asp-action="DeleteStudent" asp-controller="Admin" asp-route-id="@student.Id" class="btn btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
<div class="d-flex justify-content-center mt-4">
    @Html.PagedListPager(
            Model,
            page => Url.Action("StudentRecords",
            new { page }),
            new PagedListRenderOptions
    {

        Display = PagedListDisplayMode.IfNeeded,
        UlElementClasses = new[] { "pagination" },
        LiElementClasses = new[] { "page-item" },
        PageClasses = new[] { "page-link" }
    }
            )
</div>
